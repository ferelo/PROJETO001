@model Model.Logic.Model.aluno
@using Model.Logic.Model
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alunos</title>
</head>
<STYLE TYPE="text/css" MEDIA="print">
    .noprint {
        display: none;
    }
</STYLE> 
<body>
    <form id="form1" runat="server">        
        <table class="noprint" align="center" width="85%" border="2" bordercolor="#000000">
            <tr>
                <td align="center" CLASS="clsTableBreak" COLSPAN="9">
                    <div align="center" class="noprint">
                        <br>
                        <INPUT type="Button" class="clsButton" value="Imprimir" onclick="javascript: window.print();">   
                        <INPUT type="button" class="clsButton" onclick="javascript:location.href = '/Relatorios/Index'" value="Voltar">                    
                        <br><br>
                    </div>
                </td>
            </tr>
        </table>
        <div>
            <table align="center" width="85%" border="2">
                <tr>
                    <td align="center" colspan="2" style="color: Red; font-size: 150%">
                        <u><b>RELATÓRIO DE ALUNOS</b></u>
                    </td>
                </tr>
                <tr></tr>
            </table>
            <table align="center" width="85%" border="2">
                <tr align="center">
                    <td align="center" style="width: 40%">
                        <b>NOME</b>
                    </td>
                    <td align="center" style="width: 20%">
                        <b>CPF</b>
                    </td>
                    <td align="center" style="width: 20%">
                        <b>RG</b>
                    </td>
                    <td align="center" style="width: 20%">
                        <b>SEXO</b>
                    </td>
                    <td align="center" style="width: 20%">
                        <b>NASCIMENTO</b>
                    </td>
                    <td align="center" style="width: 30%">
                        <b>ENDEREÇO</b>
                    </td>
                    <td align="center" style="width: 20%">
                        <b>MATRICULA</b>
                    </td>
                    <td align="center" style="width: 20%">
                        <b>IDADE</b>
                    </td>
                </tr>
                @foreach (aluno d in ViewBag.Alunos)
                {
                    var sexo = d.sexo == 1 ? "Masculino" : "Feminino";

                    <tr align="center">
                        <td align="left" style="width: 40%">
                            @d.nome
                        </td>
                        <td align="right" style="width: 18%">
                            @d.cpf
                        </td>
                        <td align="right" style="width: 18%">
                            @d.rg
                        </td>
                        <td align="right" style="width: 22%">
                            @sexo
                        </td>
                        <td align="right" style="width: 22%">
                            @d.data_nascimento.ToString("dd/MM/yyyy")
                        </td>
                        <td align="right" style="width: 30%">
                            @String.Concat(d.logradouro, "-", d.numero, "-", d.bairro)
                        </td>
                        <td align="right" style="width: 22%">
                            @d.matricula
                        </td>
                        <td align="right" style="width: 22%">
                            @String.Concat(d.idade, " anos")
                        </td>

                    </tr>
                }
            </table>
        </div>
        <table class="noprint" align="center" width="85%" border="2" bordercolor="#000000">
            <tr>
                <td align="center" CLASS="clsTableBreak" COLSPAN="9">
                    <div align="center" class="noprint">
                        <br>
                        <INPUT type="Button" class="clsButton" value=" Imprimir " onclick="javascript: window.print();">    
                        <INPUT type="button" class="clsButton" onclick="javascript:location.href = '/Relatorios/Index'" value="Voltar">                     
                        <br><br>
                    </div>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>
